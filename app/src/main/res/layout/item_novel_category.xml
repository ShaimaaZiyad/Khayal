<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="novel"
            type="com.shaimaziyad.khayal.data.Novel" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/btnItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="170dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    setImage="@{novel.cover}"
                    tools:src="@drawable/ic_cover_novel_test" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="An american marriage"
                    android:text="@{novel.title}"
                    android:textStyle="bold"
                    android:textSize="17sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="By tajari jones"
                    android:text="@{novel.writer}"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        tools:rating="3.5"
                        android:rating="3.5"
                        android:layout_gravity="bottom"
                        android:numStars="5"
                        android:progressTint="@color/primaryDarkColor" />


                    <androidx.legacy.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray01" />

                    <androidx.legacy.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5 Rating"
                        android:layout_gravity="center"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="26 count"
                        setCount="@{novel.pdfs.size()}"
                        android:layout_gravity="center"
                        android:textSize="15sp" />


                    <androidx.legacy.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray01" />

                    <androidx.legacy.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="19 Review"
                        setReviews="@{novel.viewCount.size()}"
                        android:layout_gravity="center"
                        android:textSize="15sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</layout>