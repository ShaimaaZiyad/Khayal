<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/splash">


    <fragment
        android:id="@+id/splash"
        android:name="com.shaimaziyad.khayal.screens.auth.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/splash">

        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splash_to_Login"
            app:destination="@id/Login"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/viewPdf"
        android:name="com.shaimaziyad.khayal.screens.pdfViewer.PdfViewer"
        android:label="fragment_view_novel"
        tools:layout="@layout/pdf_viewer">

        <argument android:name="novelId" />
    </fragment>

    <fragment
        android:id="@+id/Login"
        android:name="com.shaimaziyad.khayal.screens.auth.Login"
        android:label="login"
        tools:layout="@layout/login">

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/Login"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.shaimaziyad.khayal.screens.auth.Register"
        android:label="register"
        tools:layout="@layout/register">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/Login"
            app:popUpTo="@id/register"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.shaimaziyad.khayal.screens.home.Home"
        android:label="Home"
        tools:layout="@layout/home">
        <action
            android:id="@+id/action_userHome_to_novelDetails"
            app:destination="@id/novelDetails" />
        <action
            android:id="@+id/action_home_to_addEditNovel"
            app:destination="@id/addEditNovel" />
        <action
            android:id="@+id/action_home_to_users"
            app:destination="@id/users" />
        <action
            android:id="@+id/action_home_to_notifications"
            app:destination="@id/notifications" />
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profile" />

    </fragment>
    <fragment
        android:id="@+id/novelDetails"
        android:name="com.shaimaziyad.khayal.screens.novelDetails.NovelDetails"
        android:label="novel_details"
        tools:layout="@layout/novel_details">
        <action
            android:id="@+id/action_novelDetails_to_novelPdf"
            app:destination="@id/pdfViewer" />
        <action
            android:id="@+id/action_novelDetails_to_viewPdf"
            app:destination="@id/viewPdf" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.shaimaziyad.khayal.screens.profile.Profile"
        android:label="profile"
        tools:layout="@layout/profile">
        <action
            android:id="@+id/action_profile_to_Login"
            app:destination="@id/Login"
            app:popUpTo="@id/profile"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/pdfViewer"
        android:name="com.shaimaziyad.khayal.screens.pdfViewer.PdfViewer"
        android:label="novel_pdf"
        tools:layout="@layout/pdf_viewer">
        <action
            android:id="@+id/action_novelPdf_to_viewPdf"
            app:destination="@id/viewPdf" />
    </fragment>
    <fragment
        android:id="@+id/addEditNovel"
        android:name="com.shaimaziyad.khayal.screens.addEditNovel.AddEditNovel"
        android:label="add_edit_novel"
        tools:layout="@layout/add_edit_novel">
        <action
            android:id="@+id/action_addEditNovel_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/addEditNovel"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/users"
        android:name="com.shaimaziyad.khayal.screens.users.Users"
        android:label="Users"
        tools:layout="@layout/users">
        <action
            android:id="@+id/action_users_to_profile"
            app:destination="@id/profile" />
    </fragment>

    <fragment
        android:id="@+id/notifications"
        android:name="com.shaimaziyad.khayal.screens.notifications.Notifications"
        android:label="Notifications"
        tools:layout="@layout/notifications" />

</navigation>